@model IEnumerable<Test.Models.ContentQuestion>
@using Test.Models
s
@{
    ViewBag.Title = "List";
    Layout = "~/Views/_ViewStart.cshtml";
}
<script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
<fieldset class="fieldset">
    <legend class="fieldset">Verified List</legend>
    <div class="row center success">
    </div>
    <div class="col-md-12">
        <h3><a href="/Blog/CreateBlog" class="btn btn-primary">Add Blog</a></h3>
        <div class="table-responsive">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Answer1</th>
                        <th>Answer2</th>
                        <th>Answer3</th>
                        <th>Answer4</th>
                        <th>Correct Answer</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @{
                                string Content = BusinessManagerBase.Truncate(item.Username, 31);
                            }
                            @Html.Raw(Content)
                        </td>
                        <td>
                            @{
                                string Conten = BusinessManagerBase.Truncate(item.AnswerA, 250);
                            }
                            @Html.Raw(Conten)
                        </td>
                        <td>
                            @{
                                string Conte = BusinessManagerBase.Truncate(item.AnswerB, 250);
                            }
                            @Html.Raw(Conte)
                        </td>

                        <td>
                            @{
                                string Cont = BusinessManagerBase.Truncate(item.AnswerC, 250);
                            }
                            @Html.Raw(Cont)
                        </td>

                        <td>
                            @{
                                string Con = BusinessManagerBase.Truncate(item.AnswerD, 250);
                            }
                            @Html.Raw(Con)
                        </td>

                        <td>
                            @{
                                string Co = BusinessManagerBase.Truncate(item.CorrectAnswer, 250);
                            }
                            @Html.Raw(Co)
                        </td>

                        <td><img src="~/uploadedstuff/@item.Image" width="100" height="100"></td>

                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><a class="btn btn-primary btn-xs" href="/Test/Create/@item.QuestionID" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></a></p></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</fieldset>



