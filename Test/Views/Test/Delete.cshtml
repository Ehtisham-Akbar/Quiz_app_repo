@model Test.Models.UserContent
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/_ViewStart.cshtml";
}
<h2>Delete User</h2>
<h3>Are you sure you want to delete this user?</h3>
<div>
    <h4>User: @Html.DisplayFor(model => model.Username)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>
        <!-- Add other fields for LastName, ThreeDigitNumber, Wins, Losses -->
    </dl>
    @using (Html.BeginForm("Delete", "UserContent", new { id = Model.Username }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-default" />
    }
    @Html.ActionLink("Cancel", "Index")
</div>


