@model Test.Models.UserContent
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_ViewStart.cshtml";
}
<h2>User Details</h2>
<div>
    <h4>User: @Html.DisplayFor(model => model.Username)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Html.DisplayFor(model => model.FirstName)</dd>
        <dt>Last Name</dt>
        <dd>@Html.DisplayFor(model => model.LastName)</dd>
        <dt>Three Digit Number</dt>
        <dd>@Html.DisplayFor(model => model.ThreeDigitNumber)</dd>
        <dt>Wins</dt>
        <dd>@Html.DisplayFor(model => model.Wins)</dd>
        <dt>Losses</dt>
        <dd>@Html.DisplayFor(model => model.Losses)</dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Username }) |
    @Html.ActionLink("Back to List", "Index")
</p>


